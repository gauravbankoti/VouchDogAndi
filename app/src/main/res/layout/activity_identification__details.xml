<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurav.vouchdog.Identification_Details">
   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true"
       android:id="@+id/tableLayout">
       <TableRow>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Identification Details"
               android:id="@+id/textView20"
               android:textStyle="bold"
               android:textSize="@dimen/abc_action_bar_content_inset_material" />
       </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="Id Type"
               android:id="@+id/textView21"
               android:layout_column="0" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="New Text"
               android:id="@+id/textView22"
               android:layout_column="6" />
       </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="Document Number"
               android:id="@+id/textView23"
               android:layout_column="0" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="New Text"
               android:id="@+id/textView29"
               android:layout_column="6" />
       </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="Name in Document"
               android:id="@+id/textView24"
               android:layout_column="0" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="New Text"
               android:id="@+id/textView30"
               android:layout_column="6" />
       </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="Issue date"
               android:id="@+id/textView25"
               android:layout_column="0" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="New Text"
               android:id="@+id/textView31"
               android:layout_column="6" />
       </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="Expiry Date"
               android:id="@+id/textView26"
               android:layout_column="0" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="New Text"
               android:id="@+id/textView32"
               android:layout_column="6" />
       </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="Country of Issue"
               android:id="@+id/textView27"
               android:layout_column="0" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="New Text"
               android:id="@+id/textView33"
               android:layout_column="6" />
       </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="State"
               android:id="@+id/textView28"
               android:layout_column="0" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="New Text"
               android:id="@+id/textView34"
               android:layout_column="6" />
       </TableRow>

       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:text="Status"
               android:id="@+id/textView17"
               android:layout_column="0" />

           <Switch
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Active/Inactive"
               android:id="@+id/switch1"
               android:layout_column="6"
               android:checked="false" />
       </TableRow>
   </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/button7"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:background="#D9534F" />

</RelativeLayout>
