<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.Fragment1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>


                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner3"
                    android:layout_column="0"
                    android:spinnerMode="dialog" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:id="@+id/editText18"
                        android:layout_column="1"
                        android:hint="Mobile Number*"
                        android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>


            </TableRow>
            <TableRow>


                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner4"
                    android:layout_column="0"
                    android:spinnerMode="dialog" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_workno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:id="@+id/editText19"
                        android:layout_column="1"
                        android:hint="Work Number"
                        android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>


            </TableRow>
            <TableRow>


                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:id="@+id/spinner5"
                    android:layout_column="0"
                    android:spinnerMode="dialog" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_homeno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:id="@+id/editText20"
                        android:layout_column="1"
                        android:hint="Home Number"
                        android:inputType="phone" />
                </android.support.design.widget.TextInputLayout>


            </TableRow>

        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="Primary Email*" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_AlternateEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editText22"
                    android:hint="Alternate Email" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferred Contact Method:-"
                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#333333"
                android:textSize="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TableRow>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Phone"
                        android:id="@+id/checkBox4"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work Phone"
                        android:id="@+id/checkBox5"
                        android:layout_column="1"
                        android:checked="false" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home Phone"
                        android:id="@+id/checkBox6"
                        android:layout_column="0"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primary Email"
                        android:id="@+id/checkBox7"
                        android:layout_column="1"
                        android:checked="false" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alternate Email"
                        android:id="@+id/checkBox8"
                        android:layout_column="0"
                        android:checked="false" />
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Present Address"
                    android:id="@+id/textView10"
                    android:layout_gravity="center"
                    android:textColor="#333333"
                    android:textSize="@dimen/abc_action_bar_content_inset_material" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_Address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText24"
                        android:hint="Address1*" />
                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street address,P.O. box,company name, c/o"
                    android:id="@+id/textView9"
                    android:textColor="#333333" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_Address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText23"
                        android:hint="Address2" />
                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apartment,suite,unit,building,floor,etc."
                    android:id="@+id/textView8"
                    android:textColor="#333333" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinner6"
                    android:spinnerMode="dialog" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_addres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText8"
                        android:hint="Country Name*"
                        android:visibility="gone" />

                </android.support.design.widget.TextInputLayout>



                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinner7"
                    android:spinnerMode="dialog" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText36"
                        android:hint="State*"
                        android:visibility="gone" />

                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText25"
                        android:hint="City*" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText26"
                        android:hint="Zip / PinCode*"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Permanent Address"
                    android:id="@+id/textView11"
                    android:layout_gravity="center"
                    android:textColor="#333333"
                    android:textSize="@dimen/abc_action_bar_content_inset_material" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Same as Present"
                    android:id="@+id/checkBox9"
                    android:layout_gravity="center" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText27"
                        android:hint="Address1*" />

                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street address,P.O. box,company name, c/o"
                    android:id="@+id/textView12"
                    android:textColor="#333333" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText28"
                        android:hint="Address2" />

                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apartment,suite,unit,building,floor,etc."
                    android:id="@+id/textView13"
                    android:textColor="#333333" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinner8"
                    android:spinnerMode="dialog" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_Addrs1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText37"
                        android:hint="Country Name"
                        android:visibility="gone" />
                </android.support.design.widget.TextInputLayout>



                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinner9"
                    android:spinnerMode="dialog" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_Addrste1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText38"
                        android:hint="State"
                        android:visibility="gone" />
                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText29"
                        android:hint="City" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_Zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText30"
                        android:hint="Zip / PinCode"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/button5"
                    android:theme="@style/MyButton"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Address/Add Address"
                    android:id="@+id/textView14"
                    android:layout_gravity="center"
                    android:textColor="#333333"
                    android:textSize="@dimen/abc_action_bar_content_inset_material" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></LinearLayout>

            </LinearLayout>

        </LinearLayout>
          </ScrollView>


</RelativeLayout>
